<Window x:Class="To_DoHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:To_DoHub"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0, 0, 0, 10">
            <TextBox Name="textbox" FontSize="14" Height="30" KeyDown="TextBox_KeyDown" VerticalContentAlignment="Center"/>
        </StackPanel>
        <ListBox Name="todolist" Grid.Row="1" FontSize="13">
        </ListBox>
    </Grid>
</Window>
